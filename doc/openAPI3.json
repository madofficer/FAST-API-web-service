{
  "openapi": "3.1.0",
  "info": {
    "title": "Task Management API",
    "description": "API for managing tasks, including creating tasks and querying task statuses/results.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server for testing and development"
    }
  ],
  "paths": {
    "/task": {
      "post": {
        "summary": "Create a new task",
        "description": "This endpoint creates a new task by providing a description.",
        "operationId": "createTask",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string",
                    "description": "A brief description of the task to be created.",
                    "example": "1000+7"
                  }
                },
                "required": ["description"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Task created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task_id": {
                      "type": "string",
                      "description": "The unique identifier of the created task.",
                      "example": "62752904-036e-4be4-bbc8-a53dae306fde"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input, missing or incorrect description"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/status/{task_id}": {
      "get": {
        "summary": "Get task status",
        "description": "This endpoint allows you to query the status of a task using its task_id.",
        "operationId": "getTaskStatus",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "description": "The ID of the task to query.",
            "schema": {
              "type": "string",
              "example": "62752904-036e-4be4-bbc8-a53dae306fde"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task status retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task_status": {
                      "type": "string",
                      "description": "The current status of the task.",
                      "example": "in-progress"
                    },
                    "task_log": {
                      "type": "string",
                      "description": "Log or messages related to the task.",
                      "example": "Task started at 2025-02-25 14:00."
                    },
                    "task_result": {
                      "type": "string",
                      "description": "The result of the task if completed.",
                      "example": "Task completed successfully."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/result/{task_id}": {
      "get": {
        "summary": "Get task result",
        "description": "This endpoint allows you to query the result of a task using its task_id.",
        "operationId": "getTaskResult",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "description": "The ID of the task to query.",
            "schema": {
              "type": "string",
              "example": "62752904-036e-4be4-bbc8-a53dae306fde"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task result retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task_result": {
                      "type": "string",
                      "description": "The result of the task if completed.",
                      "example": "1007"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}